page{
  background: #F4F5F6;
  width:100%;
}

/* 显示隐藏控制 */

.hide {
  display: none;
}

.show {
  display:flex;
}

.top{
  position: relative;
  width: 89%;
}

.topimg{
  position: relative;
  background-image: url("http://cdn.fuhuideng.com/bgm.jpg");
  background-size: cover;
  height: 31vh;
  line-height: 30rpx;
  border-radius:40rpx;
  width: 100%; 
}

.play_btn{
  position: absolute;
  right: 35rpx;
  bottom: 25rpx;
  width: 100rpx;
  height:100rpx;
}

.toptext{
  position: absolute;
  bottom: 8%;
  padding-left:8%;
  color: white 
}

.toptimetext{
  font-size:20rpx; 
}

.Bigtitle{
  font-size: 44rpx;
  font-weight: 500;
  margin-left:20rpx; 
  padding-bottom: 28rpx;
} 

.main{
  width: 89%;
  padding-top:60rpx; 
  position: relative;
  padding-bottom:10vh; 
}

.mainlist{
  display:flex;
  position: relative;
  background: #FFF;
  width: 90%;
  border-radius:40rpx;
  padding: 5%;
  margin-bottom:16rpx; 
}

.mainimg{
  position: absolute;
  width: 120rpx;
  height: 120rpx;
  border-radius:20rpx;
}

.maintext{
  padding-left:120rpx; 
  height: 120rpx;
  margin-left:5%; 
  line-height: 40rpx;
}

.maintimetext{
  position: absolute;
  bottom: 26rpx;
  color: #B7B7B7;
  font-size:20rpx; 
}

.blur{
  filter: blur(2rpx);
  -webkit-filter: blur(2rpx);
  transform: scale(1);
}

.bgm{
  position: absolute;
  width: 100%;
  height: 120rpx
}

.backgroundAudio{
  position: fixed;
  bottom: 0px;
  height: 120rpx;
  width: 100%;
  margin-top: 8rpx;
  
}

.backgroundimg{
  position: absolute;
  width: 98rpx;
  height: 98rpx;
  border-radius:50%;
  margin-left:5%; 
  margin-top:10rpx;
}

.backgroundtext{
  padding-left:120rpx; 
  height: 120rpx;
  margin-left:5%; 
  margin-top:20rpx; 
  margin-right: 120rpx;
  line-height: 40rpx;
  font-size: 29rpx;
  z-index: 2;
  overflow:hidden; 
  text-overflow:ellipsis;
  white-space:nowrap; 
}

.backgroundtimetext{
  position: absolute;
  bottom: 1.9vh;
  color: rgb(150, 150, 150);
  font-size:20rpx; 
}

.nextbackgroundAudio{
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  z-index: 3;
  right: 0;
  margin-right:5%; 
  margin-top:30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

