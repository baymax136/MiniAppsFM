/* pages/play/play.wxss */

page {
  position: fixed;
  background: #fff;
}

.top {
  position: relative;
  width: 100%;
  height: 65vh;
  background: #4b99d1;
  opacity: 0;
  /* top: -65vh; */
}

.main {
  width: 100%;
  height: 35vh;
  background: #fff;
}

/* 进度条 */

.progress-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 80%;
  margin: 0 auto;
  font-size: 25rpx;
  color: #fff;
  padding-bottom: 7vh;
}

.Audioslider {
  width: 80%;
  margin: 0 auto;
}

/* 进度条END */

/* 播放信息 */

.title {
  font-size: 30rpx;
  color: #fff;
  width: 90%;
  padding-top: 2.5vh;
  padding-bottom: 2vh;
  padding-left: 10%;
}

.author {
  font-size: 25rpx;
  color: #fff;
  width: 90%;
  padding-left: 10%;
  padding-bottom: 0.8vh;
}

.singer {
  font-size: 25rpx;
  color: #fff;
  width: 90%;
  padding-left: 10%;
  padding-bottom: 19vh;
}

/* 操作按钮 */

.previmage {
  width: 60rpx;
  height: 70rpx;
  padding-right: 65rpx;
}

.playimage {
  width: 170rpx;
  height: 170rpx;
}

.pauseimage {
  width: 170rpx;
  height: 170rpx;
}

.nextimage {
  width: 60rpx;
  height: 70rpx;
  padding-left: 65rpx;
}

/* 显示隐藏控制 */

.hide {
  display: none;
}

.show {
  display: block;
}

