/* pages/mainpages4/mainpages4.wxss */
.container{
  text-align: left
}
.Bigtitle{
  width: 85%;
  font-size: 44rpx;
  font-weight: 500;
  padding-top: 50rpx;
  text-align: left;
  padding-bottom: 29rpx;
} 

.btnlists{
  padding-top: 40rpx;
  width: 85%;
  margin: 0 auto;
}

.listbtn{
  display: flex;
  align-items: center;
  padding-bottom: 60rpx;
}

.icon{
  width: 50rpx;
  height: 50rpx;
  border-radius:50%;
  position: absolute;
  right: 0;
  margin-right: 10%;
}
.listtext{
  position: absolute;
  right: 0;
  font-size: 24rpx;
  color: #B7B7B7;
  padding-right: 10%;
}

/* 头像选择 */
.avatarUrlclose{
  position: absolute;
  width: 100%;
  height: 100%;
  text-align: center;
}

.avatarUrl{
  position: absolute;
  background: rgba(0,0,0, .6);
  /* background: rgba(255,255,255, .6); */
  width: 100%;
  height: 100%;
  text-align: center;
}

.avatarUrllisttext{
  font-size: 44rpx;
  font-weight: 500;
  margin-top:205rpx; 
  margin-bottom:105rpx; 
  color: white;
}

.avatarUrlList{
  width: 650rpx;
  height: 650rpx;
  position: relative;
  background: white;
  border-radius:60rpx;
  /* display: flex; */
  margin:0 auto;
  padding-top:50rpx; 
  /* margin-top:150rpx;  */
  text-align: center;
  z-index: 2
}

.avatarUrlImg{
  width: 150rpx;
  height: 150rpx;
  border-radius:50%;
  /* position: absolute; */
  right: 0;
  margin: 20rpx;
}


/* 显示隐藏控制 */
.hide {
  display: none;
}

.show {
  display: block;
}